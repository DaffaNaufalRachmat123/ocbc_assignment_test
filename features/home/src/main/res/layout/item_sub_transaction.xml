<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/accountHolderText"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textColor="@color/material_color_black_1"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:text="Jackie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/accountNoText"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textColor="@color/material_gray_2"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        android:text="4992-321-3321"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/accountHolderText"
        app:layout_constraintStart_toStartOf="@id/accountHolderText"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/amountText"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textColor="@color/material_green_1"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:text="1,200.33"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/accountHolderText"
        app:layout_constraintBottom_toBottomOf="@id/accountNoText"/>
</androidx.constraintlayout.widget.ConstraintLayout>